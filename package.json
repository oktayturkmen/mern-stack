{
  "name": "ecommerce",
  "private": true,
  "version": "0.1.0",
  "description": "MERN E-commerce monorepo",
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "bootstrap": "npm install -w client -w server",
    "dev": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build -w client && npm run build -w server",
    "test": "npm test -w server && npm test -w client",
    "lint": "npm run lint -w server && npm run lint -w client",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20"
  }
}
